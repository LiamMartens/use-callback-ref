{
  "compilerOptions": {
    "outDir": "lib",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@/": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}